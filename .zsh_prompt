#!/bin/zsh

# Git setup
source ~/.git-prompt.sh
GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWSTASHSTATE=0
GIT_PS1_SHOWUNTRACKEDFILES=1
GIT_PS1_SHOWUPSTREAM="auto"

setopt PROMPT_SUBST; 

# Figure out updating using https://stackoverflow.com/a/5380073
NEWLINE=$'\n'
# Current directory
WORKING_DIR='%B%F{178}@%f%b %F{69}%~%f'
# Git prompt
GIT_PROMPT="%F{178}$(__git_ps1 " (%s)")%f"
# Prompt input line
PROMPT_INPUT_LINE='%B%F{178}>%f%b %F{129}%#%f'

PS1="$WORKING_DIR $GITPROMPT$NEWLINE$PROMPT_INPUT_LINE "


# Time on the right
RPROMPT='%*'
